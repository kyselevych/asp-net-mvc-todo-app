@model List<CurrentTaskItemViewModel>

<div class="container-block">
    <h2 class="title">Current tasks</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Deadline</th>
                <th>Control</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td>@task.Name</td>
                    <td>@task.CategoryName</td>
                    <td>@task.Deadline?.ToString("dd.MM.yyyy H:mm")</td>
                    <td>
                        <a asp-action="Perform" asp-route-id="@task.Id" class="control control--perform">Perform</a>
                        <a asp-action="Delete" asp-route-id="@task.Id" class="control control--delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>