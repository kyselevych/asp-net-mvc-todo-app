@model List<CategoryListItemViewModel>

<div class="container-block">
    <h2 class="title">Categories</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Control</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@category.Id" class="control control--perform">Edit</a>
                        <a asp-action="Delete" asp-route-id="@category.Id" class="control control--delete">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

